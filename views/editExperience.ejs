<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Experience</h1>
    <div class="col-6 offset-3">
        <form action="/insights/editExperience/<%=experience.id%>?_method=PUT" method="post" novalidate class="validated-form">
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="experience[title]" value="<%= experience.title %>" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="company">Company</label>
            <input class="form-control" type="text" name="experience[company]" id="company" value="<%= experience.company %>" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="position">Position</label>
            <input class="form-control" type="text" name="experience[position]" id="position" value="<%= experience.position %>" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="experience">Experience</label>
            <textarea class="form-control" type="text" name="experience[experience]" id="experience" required><%= experience.experience %></textarea>
        </div>
        <div class="mb-3">
            <button class="btn btn-info">Update Experience</button>
            <a href="/insights/experiences" class="btn btn-danger">Cancel</a>
        </div>
        </form>
        
    </div>
</div>